<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_150dp"
    android:layout_height="wrap_content"
    app:flexWrap="wrap"
    android:id="@+id/flex"
    android:background="@android:color/holo_red_dark"
    android:layout_marginRight="@dimen/_5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_150dp"
        android:layout_height="match_parent"
        app:layout_flexBasisPercent="100%"
        android:foreground="?android:attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp"
            android:orientation="vertical"
            android:background="#29B6F6"
            android:id="@+id/layout_top"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="@dimen/_15dp"
                android:layout_height="@dimen/_15dp"
                app:srcCompat="@mipmap/ic_launcher"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:text="Meja 07"
                android:textSize="@dimen/_8sp"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_1"/>

            <TextView
                android:id="@+id/tv_pelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="05:05 Budi Setiawan"
                android:textSize="@dimen/_6sp"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="@id/tv_title"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/layout_top3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dine-In"
            android:gravity="center"
            android:textSize="@dimen/_6sp"
            android:background="#837F7F"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/layout_top"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/layout_top2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textSize="@dimen/_8sp"
            android:padding="@dimen/_5dp"
            android:background="#f0f0f0"
            android:textColor="#42A5F5"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/layout_top3"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/layout_top2"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10x"
                android:textSize="@dimen/_6sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="@dimen/_15dp"
                android:layout_height="@dimen/_15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                app:layout_constraintEnd_toStartOf="@+id/iv_2"
                app:layout_constraintStart_toEndOf="@id/tv_jumlah"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Produk"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_6sp" />

                <TextView
                    android:id="@+id/tvKondisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Panas"
                    android:textSize="@dimen/_6sp" />

                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ukuran Besar"
                    android:textSize="@dimen/_6sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/card"
            android:background="@color/gray1"
            android:gravity="center"
            android:padding="@dimen/_5dp"
            android:text=""
            android:textColor="@color/blue1"
            android:textSize="@dimen/_8sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>